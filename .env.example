# Hotel Management API Configuration
# Copy this file to .env and update with your values

# Database Configuration
# SQLite example (default for development):
DATABASE_URL=sqlite:///hotel.db
# PostgreSQL example:
# DATABASE_URL=postgresql://user:password@localhost:5432/hotel_db
# MySQL example:
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/hotel_db

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=False

# Application Configuration
APP_NAME=Hotel Management API
DEBUG=False

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=True
RATE_LIMIT_STORAGE=memory://
RATE_LIMIT_READ=100/minute
RATE_LIMIT_WRITE=20/minute
RATE_LIMIT_DELETE=10/minute
RATE_LIMIT_SEARCH=50/minute
RATE_LIMIT_WHITELIST=127.0.0.1,::1
